<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/img_list_tupian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="12dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/txt_biaoti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/img_list_tupian"
        android:text="【天猫预售】乐视手机1S32G金 Letv/乐视X500芈月传版乐1S"
        android:textColor="@color/black"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/txt_jiage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_biaoti"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/img_list_tupian"
        android:text="￥1099.0"
        android:layout_marginBottom="5dp"
        android:textColor="#ff0000" />

    <TextView
        android:id="@+id/txt_yuanjia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_biaoti"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/txt_jiage"
        android:text="市场￥1299.0"
        android:textColor="#B2AFAD" />

</RelativeLayout>