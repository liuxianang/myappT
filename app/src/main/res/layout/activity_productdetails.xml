<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relative_biaoti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/hongse"
        android:padding="@dimen/activity_home_padding" >

        <ImageView
            android:id="@+id/img_fanhui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/fanhui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="商品详情"
            android:textColor="@color/white"
            android:textSize="@dimen/activity_home_yitao" />
    </RelativeLayout>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_marginTop="@dimen/marginTop">
        <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="【移动版首发！】Huawei/华为 华为畅享5S华为5S华为手机"
                android:textColor="@color/black"
                android:textSize="20dp" />
    </LinearLayout>

</RelativeLayout>